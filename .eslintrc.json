{
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "airbnb-typescript", "next"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.eslint.json"
  },
  "rules": {
    "@typescript-eslint/return-await": 0,
    "import/extensions": 0,
    "import/prefer-default-export": 0,
    "no-underscore-dangle": 0,
    "@typescript-eslint/naming-convention": 0,
    "consistent-return": 0
  }
}
